{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    //"outFile": "./dist/chartengine.js",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      // "charts/*": [ "charts/*" ],
      // "core/*": [ "charts/core/*" ],
      // "shared/*": [ "charts/shared/*" ],
      // "data/*": [ "charts/data/*" ]
      //"jquery": []
    },
    "declaration": true, // generate d.ts files
    //"typeRoots": [ "../scripts/typings/" ],
    "traceResolution": true
    // TODO: Uncomment
    // "noUnusedParameters": true,
    // "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ],
  "include": [
    "src/**/*"
  ]
}
