{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ],
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
    },
    "declaration": true, // generate d.ts files
    "traceResolution": false,
    // TODO: change to 'true'
    "noUnusedParameters": false,
    "noUnusedLocals": false
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ],
  "include": [
    "src/**/*"
  ]
}
